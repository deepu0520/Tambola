<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/round_corner"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="DTT-Cash-5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@android:color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:background="@color/black_overlay"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_trophy"/>
            <TextView
                android:id="@+id/text_tournament_prize_amt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/txt_prize_amt"
                android:textSize="32sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/color_yellow"/>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">
            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_entry"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_column="1"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/text_entry_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_entry_amt"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_column="2"
                    android:textColor="@color/color_blue"/>
            </TableRow>
            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_start"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_column="1"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/text_start_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_start_date_time"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_column="2"
                    android:textColor="@color/color_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_seats"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_column="1"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/text_seats_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_seats_count"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_column="2"
                    android:textColor="@color/color_blue"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="192dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_btn_bg"
            android:text="@string/txt_join"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:background="@color/black_overlay"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_fast_filling"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
