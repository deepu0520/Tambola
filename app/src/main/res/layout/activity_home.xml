<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_1"
    tools:context=".HomeActivity">
    <!-- todo: top start-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avtar0"/>
        <TextView
            android:id="@+id/text_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_profile"
            android:padding="2dp"
            android:textSize="14sp"
            android:textColor="#aecfef"
            android:text="@string/profile_name"/>
        <TextView
            android:id="@+id/text_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_profile"
            android:layout_below="@+id/text_profile_name"
            android:textColor="#92c839"
            android:padding="2dp"
            android:textSize="16sp"
            android:text="@string/level"/>
    </RelativeLayout>
    <!-- todo: top center-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/ic_btn_bg"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/text_coin_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:drawableLeft="@drawable/ic_action_cash"
            android:drawablePadding="4dp"
            android:textColor="@android:color/black"
            android:text="10000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@android:color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_add_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="15sp"
            android:gravity="center_vertical|end"
            android:drawableLeft="@drawable/ic_action_add"
            android:drawablePadding="4dp"
            android:textColor="@android:color/black"
            android:text="Add Cash"/>
        <TextView
            android:id="@+id/text_gems_count"
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:visibility="gone"
            android:background="@drawable/ic_btn_bg"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:drawableLeft="@drawable/ic_action_gems"
            android:drawableRight="@drawable/ic_action_add"
            android:textColor="@android:color/black"
            android:text="1000"/>
        <TextView
            android:id="@+id/text_power_count"
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:padding="2dp"
            android:background="@drawable/ic_btn_bg"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:drawableLeft="@drawable/ic_action_power"
            android:drawableRight="@drawable/ic_action_add"
            android:textColor="@android:color/black"
            android:text="1000"/>

    </LinearLayout>
    <!-- todo: top end-->
    <ImageView
        android:id="@+id/image_menu"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- todo: center-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/image_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cash"/>
        <ImageView
            android:id="@+id/image_tournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tournament"/>
        <ImageView
            android:id="@+id/image_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_practice"/>
    </LinearLayout>
    <!-- todo: bottom start-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:drawableLeft="@drawable/ic_action_online"
                android:drawablePadding="4dp"
                android:drawableTint="@color/light_green"
                android:textColor="@color/light_green"
                android:text="Online"/>
            <TextView
                android:id="@+id/text_online_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:drawablePadding="4dp"
                android:textColor="@android:color/white"
                android:text="1,0000"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
