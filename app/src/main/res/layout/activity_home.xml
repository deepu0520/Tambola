<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    tools:context=".HomeActivity">
    <!-- todo: top start-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_profile"/>
        <TextView
            android:id="@+id/text_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_profile"
            android:padding="4dp"
            android:textColor="#6ebee3"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/text_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_profile"
            android:layout_below="@+id/text_profile_name"
            android:textColor="@color/colorPrimary"
            android:padding="4dp"
            android:text="@string/app_name"/>
    </RelativeLayout>
    <!-- todo: top center-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/ic_btn_bg">
            <TextView
                android:id="@+id/text_coin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical|center_horizontal"
                android:padding="4dp"
                android:drawableLeft="@drawable/ic_action_coin"
                android:textColor="@android:color/black"
                android:text="1000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/ic_btn_bg">
            <TextView
                android:id="@+id/text_gems_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical|center_horizontal"
                android:padding="4dp"
                android:drawableLeft="@drawable/ic_action_coin"
                android:textColor="@android:color/black"
                android:text="1000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@drawable/ic_btn_bg">
            <TextView
                android:id="@+id/text_power_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical|center_horizontal"
                android:padding="4dp"
                android:drawableLeft="@drawable/ic_action_coin"
                android:textColor="@android:color/black"
                android:text="1000"/>
        </LinearLayout>

    </LinearLayout>
    <!-- todo: top end-->
    <ImageView
        android:id="@+id/image_menu"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:src="@drawable/ic_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- todo: center-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/image_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cash"/>
        <ImageView
            android:id="@+id/image_tournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tournament"/>
        <ImageView
            android:id="@+id/image_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_practice"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
