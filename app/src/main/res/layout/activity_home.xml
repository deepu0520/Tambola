<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_1"
    tools:context=".HomeActivity">
    <!-- todo: top start-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avtar0"/>
        <TextView
            android:id="@+id/text_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_profile"
            android:padding="2dp"
            android:textSize="14sp"
            android:textColor="#aecfef"
            android:text="@string/profile_name"/>
        <TextView
            android:id="@+id/text_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_profile"
            android:layout_below="@+id/text_profile_name"
            android:textColor="#92c839"
            android:padding="2dp"
            android:textSize="16sp"
            android:text="@string/level"/>
    </RelativeLayout>
    <!-- todo: top center-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/text_coin_count"
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/ic_btn_bg"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:drawableLeft="@drawable/ic_action_coin"
            android:drawableRight="@drawable/ic_action_add"
            android:textColor="@android:color/black"
            android:text="10000"/>
        <TextView
            android:id="@+id/text_gems_count"
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/ic_btn_bg"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:drawableLeft="@drawable/ic_action_gems"
            android:drawableRight="@drawable/ic_action_add"
            android:textColor="@android:color/black"
            android:text="1000"/>
        <TextView
            android:id="@+id/text_power_count"
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/ic_btn_bg"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:drawableLeft="@drawable/ic_action_power"
            android:drawableRight="@drawable/ic_action_add"
            android:textColor="@android:color/black"
            android:text="1000"/>

    </LinearLayout>
    <!-- todo: top end-->
    <ImageView
        android:id="@+id/image_menu"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- todo: center-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/image_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cash"/>
        <ImageView
            android:id="@+id/image_tournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tournament"/>
        <ImageView
            android:id="@+id/image_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_practice"/>
    </LinearLayout>
    <!-- todo: bottom center-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/image_combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            android:src="@drawable/ic_combo"/>
        <ImageView
            android:id="@+id/image_chips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            android:src="@drawable/ic_chips"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
