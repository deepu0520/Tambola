<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    tools:context=".PlayActivity">
    <!-- todo: top center-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_random_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="96dp"/>
    <!-- todo: start center-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_live_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/round_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!-- todo: start center-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/linear_ticket_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/play_ticket">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_ticket_1"
                android:layout_width="364dp"
                android:layout_height="128dp"
                android:background="@drawable/g_ticket"/>
            <TextView
                android:layout_width="96dp"
                android:layout_height="122dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/btn_claim"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/txt_ticket_1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_ticket_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            android:gravity="center"
            android:background="@drawable/play_ticket_2">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_ticket_2"
                android:layout_width="364dp"
                android:layout_height="128dp"
                android:background="@drawable/g_ticket"/>
            <TextView
                android:layout_width="96dp"
                android:layout_height="122dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/btn_claim"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/txt_ticket_2"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>