<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/round_corner"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_8dp"
                android:orientation="vertical">
                <!-- todo: profile -->
                <RelativeLayout
                    android:id="@+id/relative_profile"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <!--  This is the main content -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:layout_marginBottom="@dimen/dimen_8dp"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        android:padding="@dimen/dimen_8dp"
                        android:background="@drawable/frame"
                        android:orientation="vertical" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/dimen_8dp"
                            android:gravity="center">
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_fname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_account"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_fname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_fname"
                                    android:maxLength="40"
                                    android:drawablePadding="4dp"
                                    android:inputType="text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_lname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_account"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_lname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_lname"
                                    android:maxLength="40"
                                    android:drawablePadding="4dp"
                                    android:inputType="text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                app:startIconDrawable="@drawable/ic_action_email"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="@string/txt_email"
                                    android:maxLength="50"
                                    android:drawablePadding="4dp"
                                    android:inputType="textEmailAddress"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_mobile"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_mobile"
                                    android:maxLength="10"
                                    android:drawablePadding="4dp"
                                    android:inputType="number"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintEnabled="true"
                                app:startIconDrawable="@drawable/ic_action_password"
                                app:passwordToggleEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_password"
                                    android:maxLength="15"
                                    android:drawablePadding="4dp"
                                    android:inputType="textPassword"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintEnabled="true"
                                app:startIconDrawable="@drawable/ic_action_password"
                                app:passwordToggleEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_confirm_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_confirm_password"
                                    android:maxLength="15"
                                    android:drawableLeft="@drawable/ic_action_password"
                                    android:drawablePadding="4dp"
                                    android:inputType="textPassword"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dimen_8dp"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/image_profile"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:src="@mipmap/ic_launcher"/>
                                <TextView
                                    android:id="@+id/text_add_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:drawableLeft="@drawable/ic_action_add"
                                    android:textColor="@android:color/black"
                                    android:text="Add "/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/text_update"
                                android:layout_width="@dimen/dimen_256dp"
                                android:layout_height="@dimen/dimen_48dp"
                                android:layout_margin="@dimen/dimen_8dp"
                                android:background="@drawable/ic_btn_bg"
                                android:padding="@dimen/dimen_2dp"
                                android:textSize="@dimen/dimen_14sp"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:text="UPDATE"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <!--  This is the title label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/light_blue"
                        android:padding="@dimen/dimen_4dp"
                        android:text="Profile"
                        android:layout_marginLeft="@dimen/dimen_32dp"/>
                </RelativeLayout>
                <!-- todo: bank details -->
                <RelativeLayout
                    android:id="@+id/relative_bank_details"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp">
                    <!--  This is the main content -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:layout_marginBottom="@dimen/dimen_8dp"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        android:padding="@dimen/dimen_8dp"
                        android:background="@drawable/frame"
                        android:orientation="vertical" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/dimen_8dp"
                            android:gravity="center">
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_bank_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_bank"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_bank_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_bank_name"
                                    android:maxLength="50"
                                    android:drawablePadding="4dp"
                                    android:inputType="text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_ac_holder_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_account"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_ac_holder_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_ac_holder_name"
                                    android:maxLength="50"
                                    android:drawablePadding="4dp"
                                    android:inputType="text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_account_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_account_balance"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_account_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_ac_no"
                                    android:maxLength="16"
                                    android:drawablePadding="4dp"
                                    android:inputType="numberPassword"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_confirm_account_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_account_balance"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_confirm_account_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_confirm_ac_no"
                                    android:maxLength="16"
                                    android:drawablePadding="4dp"
                                    android:inputType="number"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_ifsc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_bank"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_ifsc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_ifsc_code"
                                    android:maxLength="11"
                                    android:drawablePadding="4dp"
                                    android:inputType="textCapCharacters"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <TextView
                                android:id="@+id/text_bank_details_update"
                                android:layout_width="@dimen/dimen_256dp"
                                android:layout_height="@dimen/dimen_48dp"
                                android:layout_margin="@dimen/dimen_8dp"
                                android:background="@drawable/ic_btn_bg"
                                android:padding="@dimen/dimen_2dp"
                                android:textSize="@dimen/dimen_14sp"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:text="UPDATE"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <!--  This is the title label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/light_blue"
                        android:padding="@dimen/dimen_4dp"
                        android:text="Bank Details"
                        android:layout_marginLeft="@dimen/dimen_32dp"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>