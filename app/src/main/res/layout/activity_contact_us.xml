<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/round_corner"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_8dp"
                android:orientation="vertical">
                <!-- todo: contact us -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <!--  This is the main content -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:layout_marginBottom="@dimen/dimen_8dp"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        android:padding="@dimen/dimen_8dp"
                        android:background="@drawable/frame"
                        android:orientation="vertical" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/dimen_8dp"
                            android:gravity="center">
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_account"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_name"
                                    android:maxLength="40"
                                    android:drawablePadding="@dimen/dimen_4dp"
                                    android:inputType="text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                app:startIconDrawable="@drawable/ic_action_email"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="@string/txt_email"
                                    android:maxLength="50"
                                    android:drawablePadding="@dimen/dimen_4dp"
                                    android:inputType="textEmailAddress"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_mobile"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_mobile"
                                    android:maxLength="10"
                                    android:drawablePadding="@dimen/dimen_4dp"
                                    android:inputType="number"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_query"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_action_edit"
                                app:hintEnabled="true">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_query"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/txt_query"
                                    android:maxLength="200"
                                    android:singleLine="false"
                                    android:drawablePadding="@dimen/dimen_4dp"
                                    android:inputType="text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_8dp">
                                <!--  This is the main content -->
                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_16dp"
                                    android:layout_marginBottom="@dimen/dimen_8dp"
                                    android:layout_marginLeft="@dimen/dimen_8dp"
                                    android:layout_marginRight="@dimen/dimen_8dp"
                                    android:padding="@dimen/dimen_8dp"
                                    android:background="@drawable/frame"
                                    android:orientation="vertical" >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/dimen_8dp"
                                        android:gravity="center"
                                        android:orientation="vertical">
                                        <ImageView
                                            android:id="@+id/image_attachment"
                                            android:layout_width="@dimen/dimen_256dp"
                                            android:layout_height="@dimen/dimen_144dp"
                                            android:src="@mipmap/ic_launcher"/>
                                        <TextView
                                            android:id="@+id/text_add_attachment"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/dimen_2dp"
                                            android:padding="@dimen/dimen_2dp"
                                            android:textSize="@dimen/dimen_12sp"
                                            android:gravity="center"
                                            android:drawableLeft="@drawable/ic_action_add"
                                            android:textColor="@android:color/black"
                                            android:text="Add"/>
                                    </LinearLayout>
                                </RelativeLayout>
                                <!--  This is the title label -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/light_blue"
                                    android:padding="@dimen/dimen_4dp"
                                    android:text="Attachment"
                                    android:layout_marginLeft="@dimen/dimen_32dp"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/text_submit"
                                android:layout_width="@dimen/dimen_256dp"
                                android:layout_height="@dimen/dimen_48dp"
                                android:layout_margin="@dimen/dimen_8dp"
                                android:background="@drawable/ic_btn_bg"
                                android:padding="@dimen/dimen_2dp"
                                android:textSize="@dimen/dimen_14sp"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:text="SUBMIT"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <!--  This is the title label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/light_blue"
                        android:padding="@dimen/dimen_4dp"
                        android:text="Contact Us"
                        android:layout_marginLeft="@dimen/dimen_32dp"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>